# Environment Configuration Template
# Copy this file to .env and update with your actual values

# Application Settings
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# Data Directories
DATA_DIR=data
RESULTS_DIR=reports
MODELS_DIR=models

# Database Configuration
DATABASE_URL=postgresql://bi_user:password@localhost:5432/enterprise_bi
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL_SECONDS=3600

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_TIMEOUT=30
API_MAX_REQUESTS=1000

# Security Configuration
JWT_SECRET_KEY=change-this-to-a-secure-random-key
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24
ENCRYPTION_KEY=change-this-to-a-secure-random-key

# CRM Integration - Microsoft Dynamics 365
DYNAMICS365_BASE_URL=https://your-org.crm.dynamics.com
DYNAMICS365_CLIENT_ID=
DYNAMICS365_CLIENT_SECRET=
DYNAMICS365_TENANT_ID=

# CRM Integration - Salesforce
SALESFORCE_INSTANCE_URL=https://your-org.salesforce.com
SALESFORCE_CLIENT_ID=
SALESFORCE_CLIENT_SECRET=
SALESFORCE_USERNAME=
SALESFORCE_PASSWORD=
SALESFORCE_SECURITY_TOKEN=

# CRM Integration - HubSpot
HUBSPOT_API_KEY=
HUBSPOT_BASE_URL=https://api.hubapi.com

# CRM Sync Settings
CRM_SYNC_ENABLED=true
CRM_SYNC_INTERVAL_MINUTES=30
CRM_BATCH_SIZE=1000

# Monitoring & Alerting
MONITORING_ENABLED=true
ALERT_EMAIL_ENABLED=true
ALERT_EMAIL_SMTP_SERVER=smtp.gmail.com
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_FROM=alerts@yourcompany.com
ALERT_EMAIL_TO=admin@yourcompany.com
ALERT_EMAIL_USERNAME=
ALERT_EMAIL_PASSWORD=

ALERT_SLACK_ENABLED=false
ALERT_SLACK_WEBHOOK_URL=

# Performance Thresholds
ALERT_RESPONSE_TIME_MS=5000
ALERT_ERROR_RATE_PERCENT=5
ALERT_MEMORY_USAGE_PERCENT=80
ALERT_CPU_USAGE_PERCENT=90
ALERT_DISK_USAGE_PERCENT=85

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# CORS Settings
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,https://yourcompany.com

# Model Training
AUTO_RETRAIN_ENABLED=false
AUTO_RETRAIN_INTERVAL_DAYS=7
MODEL_VERSION_RETENTION_COUNT=5

# Feature Flags
FEATURE_REALTIME_ANALYTICS=true
FEATURE_AB_TESTING=true
FEATURE_FRAUD_DETECTION=true
FEATURE_INVENTORY_OPTIMIZATION=true

# External Services
MLFLOW_TRACKING_URI=http://localhost:5000
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
